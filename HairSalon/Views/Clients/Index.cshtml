@{
  Layout = "_Layout";
}

@using HairSalon.Models

<h1>Clients</h1>


@if (Model.Count == 0)
{
  <h2>You dont have any clients yet!</h2>
  <h3>@Html.ActionLink("Add a Client?", "Create")</h3>
}
else 
{
  <h2>Here are all the clients that your stylists have Claire!</h2>

  <ul>
    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId}) | Stylist: @Html.ActionLink($"{client.Stylist.Name}", "Details", "Stylists", new { id = client.Stylist.StylistId})</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add a Client", "Create")</p>
<p>@Html.ActionLink("See all Stylists", "Index", "Stylists")</p>