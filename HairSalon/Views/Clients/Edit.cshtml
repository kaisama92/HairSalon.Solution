@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Edit @Html.DisplayFor(model => model.Name)'s information</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.Pronouns)
  @Html.TextBoxFor(model => model.Pronouns)
  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")
  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Cancel", "Index")</p>