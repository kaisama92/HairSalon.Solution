@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Add a new stylist</h2>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.Specialty)
  @Html.TextBoxFor(model => model.Specialty)
  @Html.LabelFor(model => model.Pronouns)
  @Html.TextBoxFor(model => model.Pronouns)
  @Html.LabelFor(model => model.Date, "Hire Date")
  @Html.TextBoxFor(model => model.Date, new {type="date"})
  <input type="submit" value="add new stylist" />
}

<h4>Or @Html.ActionLink("Cancel", "Index")</h4>