@using System.Collections.Generic
@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>@Html.DisplayFor(model => model.Name)'s Information</h2>

<hr />

<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<h3>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)</h3>
<h3>@Html.DisplayNameFor(model => model.Pronouns): @Html.DisplayFor(model => model.Pronouns)</h3>

@if(Model.Clients.Count == 0)
{
  <h3>@Html.DisplayFor(model=> model.Name) doesn't have any clients.</h3>
}
else
{
  <h3>Clients:</h3>
  <ul>
    @foreach(Client client in Model.Clients)
    {
      <li>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add Client", "Create", "Clients", new { id = Model.StylistId})</p>
<p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId})</p>
<p>@Html.ActionLink("Remove Stylist", "Delete", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Home", "Index")</p>